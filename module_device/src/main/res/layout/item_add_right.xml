<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_add_right_img"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_home_80"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_right_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="hello wrold"
        android:textColor="@color/black_4F4C4B"
        android:textSize="11dp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_add_right_img"
        app:layout_constraintRight_toRightOf="@+id/iv_add_right_img"
        app:layout_constraintTop_toBottomOf="@+id/iv_add_right_img" />
</androidx.constraintlayout.widget.ConstraintLayout>