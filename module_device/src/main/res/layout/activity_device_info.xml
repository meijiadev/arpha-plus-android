<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_e2e2e2">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/device_info_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_setting_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/icon_setting_1"
            android:drawableRight="@drawable/icon_arrow_right_16"
            android:drawablePadding="10dp"
            android:text="@string/button_tips0"
            android:textColor="@color/black_4F4C4B"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_setting_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/icon_setting_2"
            android:drawableRight="@drawable/icon_arrow_right_16"
            android:drawablePadding="10dp"
            android:text="@string/button_tips1"
            android:textColor="@color/black_4F4C4B"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_setting_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/icon_setting_3"
            android:drawableRight="@drawable/icon_arrow_right_16"
            android:drawablePadding="10dp"
            android:text="@string/button_tips2"
            android:textColor="@color/black_4F4C4B"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_setting_all_permissions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/icon_setting_4"
            android:drawableRight="@drawable/icon_arrow_right_16"
            android:drawablePadding="10dp"
            android:text="@string/button_tips3"
            android:textColor="@color/black_4F4C4B"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_setting_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/icon_setting_5"
            android:drawableRight="@drawable/icon_arrow_right_16"
            android:drawablePadding="10dp"
            android:text="@string/button_tips4"
            android:textColor="@color/black_4F4C4B"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_setting_check_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/icon_setting_6"
            android:drawableRight="@drawable/icon_arrow_right_16"
            android:drawablePadding="10dp"
            android:text="@string/button_tips5"
            android:textColor="@color/black_4F4C4B"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_setting_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/icon_setting_7"
            android:drawableRight="@drawable/icon_arrow_right_16"
            android:drawablePadding="10dp"
            android:text="@string/button_tips6"
            android:textColor="@color/black_4F4C4B"
            android:textSize="14dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>