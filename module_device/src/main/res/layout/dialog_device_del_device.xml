<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_sheet_dialog_bg1">


    <TextView
        android:id="@+id/tv_del_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/del_device"
        android:textColor="@color/black_4F4C4B"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/text_BC9E70"
        app:layout_constraintLeft_toLeftOf="@+id/tv_del_dialog_title"
        app:layout_constraintRight_toRightOf="@+id/tv_del_dialog_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_del_dialog_title" />

    <EditText
        android:id="@+id/tv_del_device_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:background="@null"
        android:hint="@string/input_pwd"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_979797"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_del_dialog_title" />

    <CheckBox
        android:id="@+id/cb_del_device_pwd"
        android:layout_width="16dp"
        android:layout_height="14dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/pwd_check_style"
        android:button="@null"
        app:layout_constraintBottom_toBottomOf="@+id/tv_del_device_pwd"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_del_device_pwd" />

    <View
        android:id="@+id/v_login_line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@color/line_E2E2E2"
        app:layout_constraintTop_toBottomOf="@+id/tv_del_device_pwd" />

    <com.caldremch.widget.round.RoundButton
        android:id="@+id/btn_del_device_go1"
        android:layout_width="148dp"
        android:layout_height="36dp"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_del_device_go2"
        app:layout_constraintTop_toBottomOf="@+id/v_login_line3"
        app:rl_backgroundColor="@color/grey_4F4C4B"
        app:rl_radius="30dp" />

    <com.caldremch.widget.round.RoundButton
        android:id="@+id/btn_del_device_go2"
        android:layout_width="148dp"
        android:layout_height="36dp"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:text="@string/next"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintLeft_toRightOf="@+id/btn_del_device_go1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_login_line3"
        app:rl_backgroundColor="@color/grey_4F4C4B"
        app:rl_radius="30dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_del_device_go2" />
</androidx.constraintlayout.widget.ConstraintLayout>