<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_add_hotdot_qrcode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_add_device_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_connect"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_add_select_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/add_device_hint"
            android:textColor="@color/black_4F4C4B"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_add_device_img" />


        <com.caldremch.widget.round.RoundTextView
            android:id="@+id/tv_add_select_hot_dot"
            android:layout_width="148dp"
            android:layout_height="36dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="@string/hot_dot"
            android:textColor="@color/white"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_add_select_tips"
            app:rl_backgroundColor="@color/black_4F4C4B"
            app:rl_radius="30dp" />

        <com.caldremch.widget.round.RoundTextView
            android:id="@+id/tv_add_select_hot_qrcode"
            android:layout_width="148dp"
            android:layout_height="36dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/qr_code"
            android:textColor="@color/black_4F4C4B"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_add_select_hot_dot"
            app:rl_radius="30dp"
            app:rl_stroke_color="@color/black_4F4C4B"
            app:rl_stroke_width="1dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_input_number"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="38dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_add_select_wifi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:background="@null"
            android:drawableLeft="@drawable/icon_wifi_16"
            android:drawablePadding="10dp"
            android:hint="@string/select_wifi"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_979797"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/iv_add_change_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_add_change_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:src="@drawable/icon_change_20"
            app:layout_constraintRight_toRightOf="parent" />

        <View
            android:id="@+id/v_login_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@color/line_E2E2E2"
            app:layout_constraintTop_toBottomOf="@+id/tv_add_select_wifi" />

        <EditText
            android:id="@+id/tv_login_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:hint="@string/input_pwd"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_979797"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_login_line2" />

        <CheckBox
            android:id="@+id/cb_login_pwd"
            android:layout_width="16dp"
            android:layout_height="14dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/pwd_check_style"
            android:button="@null"
            app:layout_constraintBottom_toBottomOf="@+id/tv_login_pwd"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_login_pwd" />

        <View
            android:id="@+id/v_login_line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@color/line_E2E2E2"
            app:layout_constraintTop_toBottomOf="@+id/tv_login_pwd" />


        <TextView
            android:id="@+id/tv_add_select_tipss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/select_wifi_tips"
            android:textSize="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_login_line3" />

        <TextView
            android:id="@+id/tv_add_select_tipss_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/more_tips"
            android:textColor="@color/text_BC9E70"
            android:textSize="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_add_select_tipss" />


        <com.caldremch.widget.round.RoundTextView
            android:id="@+id/tv_add_select_next"
            android:layout_width="148dp"
            android:layout_height="36dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_add_select_tipss_next"
            app:rl_backgroundColor="@color/black_4F4C4B"
            app:rl_radius="30dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/iv_add_device_qr_code"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="50dp"
        android:background="@color/text_BC9E70"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>