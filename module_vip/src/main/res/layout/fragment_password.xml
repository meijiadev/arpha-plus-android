<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_password"
        android:textStyle="bold"
        android:textSize="14dp"
        android:textColor="@color/black_333333"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCurrentPassword"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        android:text="Sandy wang"
        android:textColor="@color/black_333333"
        android:textSize="14dp"
        android:gravity="center_vertical"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPswVisible1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/line1"
        android:layout_marginBottom="5dp"
        android:src="@drawable/icon_eyeinvisible_20"
        android:layout_marginEnd="36dp"
        />
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_e2e2e2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCurrentPassword"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="3dp"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNewPsw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1"
        android:layout_marginTop="40dp"
        android:text="@string/new_password"
        android:textSize="14dp"
        android:textColor="@color/black_333333"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        />
    
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etPsw"
        android:layout_width="180dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNewPsw"
        android:layout_marginTop="25dp"
        android:layout_marginStart="40dp"
        android:background="@color/white"
        android:hint="@string/please_enter_password"
        android:textColorHint="@color/gray_979797"
        android:textSize="14dp"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPswVisible2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/line2"
        android:layout_marginBottom="5dp"
        android:src="@drawable/icon_eyeinvisible_20"
        android:layout_marginEnd="36dp"
        />


    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etPsw"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@color/gray_e2e2e2"
        android:layout_marginTop="7dp"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTips1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line2"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:text="@string/password_tips"
        android:textSize="14dp"
        android:textColor="@color/red_E3243B"
        android:visibility="gone"
        />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etRetryPsw"
        android:layout_width="180dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line2"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        android:background="@color/white"
        android:textSize="14dp"
        android:hint="@string/please_retry_enter_password"
        android:textColorHint="@color/gray_979797"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPswVisible3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/line3"
        android:layout_marginBottom="5dp"
        android:src="@drawable/icon_eyeinvisible_20"
        android:layout_marginEnd="36dp"
        />


    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etRetryPsw"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@color/gray_e2e2e2"
        android:layout_marginTop="7dp"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTips2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line3"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:text="@string/password_tips"
        android:textSize="14dp"
        android:textColor="@color/gray_898A8B"
        />
    <com.caldremch.widget.round.RoundButton
        android:id="@+id/btSave"
        android:layout_width="148dp"
        android:layout_height="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="116dp"
        app:rl_radius="20dp"
        app:rl_backgroundColor="@color/gray_B5B5B6"
        android:text="@string/common_save"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:textStyle="bold"
        />








</androidx.constraintlayout.widget.ConstraintLayout>