<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Arphaplusandroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/text_BC9E70</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/ActivityAnimFade</item>
    </style>

    <style name="customDialog" parent="Theme.AppCompat.Dialog">
        <!--取消默认Dialog的windowFrame框-->
        <item name="android:windowFrame">@null</item>
        <!--设置无标题Dialog-->
        <item name="android:windowNoTitle">true</item>
        <!--是否四周变暗-->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 是否悬浮在activity上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 取消默认ContentOverlay背景 -->
        <item name="android:windowContentOverlay">@null</item>
        <!--取消window默认背景 不然四角会有黑影-->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--实现BottomSheetDialog圆角效果-->
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>
    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


</resources>